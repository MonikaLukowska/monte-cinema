<!DOCTYPE html>
<html>
  <head>
    <title>MonteCinema</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <header>
      <nav class="navbar ja navbar-expand-lg navbar-light bg-light w-100">
        <div class="w-100 container d-flex flex-column">
          <div class="row w-100 align-items-center justify-content-between">
            <div class="col">
              <h1 >
                <%= link_to 'Monte Cinema', root_path, class: 'navbar-brand' %>
              </h1>
            </div>
            <div class="col">
              <ul class="nav justify-content-end ">
                 <li><%= link_to "Movies", movies_path, class: 'nav-link btn btn-link text-dark'  %></li>
              </ul>
            </div> 
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <%= render 'layouts/messages'%> 
      <%= yield %>
    </div>
  </body>
</html>
